<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RequestHall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request Lecture Hall"
            android:textColor="#1B324E"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="325dp"
            android:layout_height="70dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="15dp"
            >

            <LinearLayout
                android:id="@+id/sick_leave"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtLechall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#889AAF"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:layout_marginStart="20dp"
                    android:hint="Lecture hall name"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <AutoCompleteTextView
            android:id="@+id/acbatchName"
            android:layout_width="325dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="170dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Batch Name"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="#889AAF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reqdate"
            android:layout_width="325dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:paddingTop="15dp"
            android:paddingLeft="20dp"
            android:layout_marginStart="20dp"
            android:paddingEnd="12dp"
            android:textColor="#889AAF"
            android:layout_marginTop="260dp"
            android:textSize="18sp"
            android:hint="Date"/>

        <Button
            android:id="@+id/btn2"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="162dp"
            android:layout_height="60dp"
            android:text="Evening"
            android:textColor="#889AAF"
            android:textAllCaps="false"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="178dp"/>

        <Button
            android:id="@+id/btn1"
            android:layout_marginStart="20dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="Morning"
            android:textColor="#889AAF"
            android:textAllCaps="false"
            android:layout_marginTop="350dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReqHall"
            android:layout_width="325dp"
            android:layout_height="70dp"
            android:layout_marginTop="480dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@null"
            app:cornerRadius="18dp"
            app:backgroundTint="@color/purple_200"
            android:text="Request Hall"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_gravity="center_vertical|center_horizontal"
            />



    </RelativeLayout>



</LinearLayout>
